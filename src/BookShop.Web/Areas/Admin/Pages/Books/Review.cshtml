@page
@model BookShop.Web.Areas.Admin.Pages.Books.ReviewModel
@{
    ViewData["title"] = "Review";
}

<h1>Book Review</h1>
<hr />

<div class="mb-3 col-lg-3">
    <label class="control-label">Book ID</label>
    <input id="bookId" class="form-control " />
 
</div>

<button class="btn btn-primary" id="find">Find</button>
<hr />

<div id="bookDetails"></div>

@section scripts{

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script>
        $(document).ready(function(){
            $("#find").click(function(){
                var bookId=$("#bookId").val();

                $.get("/api/book/details/"+bookId,function(html){
                    $("#bookDetails").html(html);

                });
            });
            //alert("ready!");
        });

    </script>
}