@page
@model BookShop.Web.Areas.Admin.Pages.Books.IndexModel
@{
}

@{
    ViewData["Title"] = "Books";
}

<h2>Books</h2>

<hr />

<p>
    <a asp-page="./Create" class="btn btn-primary">Add New Book</a>
    <a asp-page="./Review" class="btn btn-primary">Review </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Category
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BookList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @item.CategoryName
                </td>
                <td>
                   <a asp-page="./details" asp-route-bookid="@item.Id" class="btn btn-info">Details</a>
                    <a asp-page="./edit" asp-route-bookid="@item.Id" class="btn btn-primary">Edit</a>

                </td>
            </tr>
        }
    </tbody>
</table>