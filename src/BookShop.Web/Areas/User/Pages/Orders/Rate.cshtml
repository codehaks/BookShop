@model BookShop.Web.Areas.User.Pages.Orders.RateModel

<form method="post">
    <input asp-for="OrderId" hidden />

    <div class="form-group" id="ratingapp">

        <label asp-for="Score" class="control-label">Book Rating</label>
        <select asp-for="Score" class="form-select mb-3">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>

    <button class="btn btn-primary">Submit</button>
    <a asp-page="./index" class="btn btn-link">Back to list</a>
</form>