@page
@model BookShop.Web.Pages.Shop.IndexModel
@{
    ViewData["title"] = "Shop";
}

<form method="post" class="row row-cols-lg-auto g-3 align-items-center mb-3 mt-3">

    <div class="col-12">
        <input asp-for="Term" class="form-control" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<hr />

<div class="row">
    @foreach (var book in Model.BookList)
    {

        <div class="col-3 text-center">

           <component type="typeof(BookShop.Web.Components.BookCard)" param-BookItem="@book" render-mode="Static" />

        </div>
    }

</div>